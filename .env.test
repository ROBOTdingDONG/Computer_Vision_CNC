# Computer Vision CNC Manufacturing Platform - Test Environment Configuration
# For local testing and development

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
CV_CNC_ENV=test
CV_CNC_DEBUG=true
CV_CNC_VERSION=1.0.0

# =============================================================================
# API CONFIGURATION
# =============================================================================
CV_CNC_API_HOST=0.0.0.0
CV_CNC_API_PORT=8000
CV_CNC_API_WORKERS=2

# Security (test values - not for production)
CV_CNC_SECRET_KEY=test-secret-key-not-for-production
CV_CNC_ALGORITHM=HS256
CV_CNC_ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=cv-cnc-postgres
POSTGRES_PORT=5432
POSTGRES_DB=cv_cnc_manufacturing_test
POSTGRES_USER=testuser
POSTGRES_PASSWORD=testpass123

# Full database URL
DATABASE_URL=postgresql://testuser:testpass123@cv-cnc-postgres:5432/cv_cnc_manufacturing_test

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=cv-cnc-redis
REDIS_PORT=6379
REDIS_PASSWORD=testredis123
REDIS_URL=redis://:testredis123@cv-cnc-redis:6379/0

# =============================================================================
# MOCK CNC MACHINE CONFIGURATION (for testing)
# =============================================================================
# MTConnect Configuration (mock server)
CV_CNC_MTCONNECT_HOST=cv-cnc-mock-cnc
CV_CNC_MTCONNECT_PORT=5000
CV_CNC_MTCONNECT_INTERVAL=1000

# OPC-UA Configuration (mock server)
CV_CNC_OPCUA_ENDPOINT=opc.tcp://cv-cnc-mock-cnc:4840
CV_CNC_OPCUA_USERNAME=testuser
CV_CNC_OPCUA_PASSWORD=testpass
CV_CNC_OPCUA_SECURITY_POLICY=None

# Modbus Configuration (mock server)
CV_CNC_MODBUS_HOST=cv-cnc-mock-cnc
CV_CNC_MODBUS_PORT=502
CV_CNC_MODBUS_UNIT_ID=1

# =============================================================================
# COMPUTER VISION CONFIGURATION
# =============================================================================
CV_CNC_USE_GPU=false  # Set to false for testing without GPU
CV_CNC_MAX_IMAGE_SIZE=1024x1024
CV_CNC_DEFECT_THRESHOLD=0.8
CV_CNC_QUALITY_THRESHOLD=0.95
CV_CNC_BATCH_SIZE=2

# Model Configuration (test models)
CV_CNC_DEFECT_MODEL=test_defect_model
CV_CNC_QUALITY_MODEL=test_quality_model
CV_CNC_MODEL_PATH=/app/models

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Prometheus
PROMETHEUS_ENDPOINT=http://cv-cnc-prometheus:9090

# Grafana
GRAFANA_HOST=cv-cnc-grafana
GRAFANA_PORT=3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin123

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
CV_CNC_LOG_LEVEL=DEBUG
CV_CNC_LOG_FORMAT=pretty
CV_CNC_USE_STRUCTLOG=true

# =============================================================================
# MANUFACTURING CONFIGURATION (test mode)
# =============================================================================
# Safety Configuration (relaxed for testing)
CV_CNC_SAFETY_MODE=false
CV_CNC_EMERGENCY_STOP_ENABLED=false
CV_CNC_SAFETY_ZONE_ENABLED=false

# Quality Control
CV_CNC_AUTO_REJECT_ENABLED=false
CV_CNC_QUALITY_CONTROL_ENABLED=true
CV_CNC_INSPECTION_TIMEOUT=10

# Production Configuration
CV_CNC_PRODUCTION_MODE=false
CV_CNC_MAX_CONCURRENT_INSPECTIONS=5
CV_CNC_INSPECTION_QUEUE_SIZE=50

# =============================================================================
# TEST DATA PATHS
# =============================================================================
CV_CNC_TEST_DATA_PATH=/app/test_data
CV_CNC_TEST_IMAGES_PATH=/app/test_data/images
CV_CNC_TEST_MODELS_PATH=/app/test_data/models
